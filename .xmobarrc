Config
  { -- appearance
    font = "xft:Bitstream Vera Sans Mono:size=9:bold:antialias=true",
    bgColor = "#282c34",
    fgColor = "#ff6c6b",
    position = Static {xpos = 0, ypos = 0, width = 1920, height = 24},
    -- layout
    sepChar = "%",
    alignSep = "}{",
    template = "<icon=haskell_20.xpm/> <fc=#666666>|</fc> %battery% <fc=#666666>|</fc> %multicpu% <fc=#666666>|</fc> %memory% <fc=#666666>|</fc> %dynnetwork% }{ %date% <fc=#666666>|</fc> %kbd% ",
    -- general behavior
    lowerOnStart = True,
    hideOnStart = False,
    allDesktops = True,
    persistent = True,
    iconRoot = "/home/alex/.xmonad/xpm/",
    commands =
      [
        Run DynNetwork     [ "--template" , "<fc=#666666><dev>: <tx>kB/s|<rx>kB/s</fc>"
                             , "--Low"      , "1000"       -- units: B/s
                             , "--High"     , "5000"       -- units: B/s
                             , "--low"      , "darkgreen"
                             , "--normal"   , "darkorange"
                             , "--high"     , "darkred"
                             ] 10
        , Run MultiCpu       [ "--template" , "<fc=#666666>cpu:</fc> <total>%"
                             , "--Low"      , "50"         -- units: %
                             , "--High"     , "85"         -- units: %
                             , "--low"      , "darkgreen"
                             , "--normal"   , "darkorange"
                             , "--high"     , "darkred"
                             ] 10
        , Run Memory         [ "--template" ,"mem: <used>M (<usedratio>%)"
                             , "--Low"      , "20"        -- units: %
                             , "--High"     , "90"        -- units: %
                             , "--low"      , "darkgreen"
                             , "--normal"   , "darkorange"
                             , "--high"     , "darkred"
                             ] 10
        , Run Battery        [ "--template" , "<fc=#666666>battery:</fc> <acstatus>"
                             , "--Low"      , "10"        -- units: %
                             , "--High"     , "80"        -- units: %
                             , "--low"      , "darkred"
                             , "--normal"   , "darkorange"
                             , "--high"     , "darkgreen"
                             , "--" -- battery specific options
                                       -- discharging status
                                       , "-o"	, "<left>% (<timeleft>)"
                                       -- AC "on" status
                                       , "-O"	, "<fc=#dAA520>Charging</fc>"
                                       -- charged status
                                       , "-i"	, "<fc=#006000>Charged</fc>"
                             ] 50
        , Run Date           "<fc=#ABABAB>%F (%a) %T</fc>" "date" 10
        , Run Kbd            [("us"         , "<fc=#8B0000>US</fc>")]
        ]
   }