Config
  { -- appearance
    font = "xft:Bitstream Vera Sans Mono:size=9:bold:antialias=true",
    bgColor = "#282c34",
    fgColor = "#ff6c6b",
    position = Static {xpos = 0, ypos = 0, width = 1920, height = 24},
    -- layout
    sepChar = "%",
    alignSep = "}{",
    template = "<icon=haskell_20.xpm/> <fc=#666666>|</fc> %cpu% <fc=#666666>|</fc> %memory% <fc=#666666>|</fc> %enp6s0% <fc=#666666>|</fc> %disku% }{ %date%",
    -- general behavior
    lowerOnStart = True,
    hideOnStart = False,
    allDesktops = True,
    persistent = True,
    iconRoot = "/home/alex/.xmonad/xpm/",
    commands =
      [ Run Date "<fn=1>\xf133</fn>  %b %d %Y - %H:%M " "date" 50,
        Run Network "enp6s0" ["-t", "<fn=1>\xf0aa</fn>  <rx>kb  <fn=1>\xf0ab</fn>  <tx>kb"] 20,
        Run Cpu ["-t", "<fn=1>\xf108</fn>  cpu: (<total>%)", "-H", "50", "--high", "red"] 20,
        Run Memory ["-t", "<fn=1>\xf233</fn>  mem: <used>M (<usedratio>%)"] 20,
        Run DiskU [("/", "<fn=1>\xf0c7</fn>  hdd: <free> free")] [] 60,
        Run Com "uname" ["-r"] "" 3600
      ]
  }
